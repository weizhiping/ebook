<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    <FrameLayout
        android:id="@+id/ebook_rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/ebook_ll_page"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentRight="true"
		        android:background="@color/transparent"
		        android:orientation="vertical"
		        >
		        <TextView
			        android:id="@+id/ebook_pageCount"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:textSize="@dimen/number_text_size"
			        android:background="@color/transparent"
			        />
		        <TextView
			        android:id="@+id/ebook_curPage"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="right|center_vertical"
			        android:textSize="@dimen/number_text_size"
			        android:background="@color/transparent"
			        />
			</LinearLayout>   
			<TextView
		        android:id="@+id/ebook_main_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentLeft="true"
		        android:layout_toRightOf="@id/ebook_ll_page"
		        android:layout_marginRight="@dimen/item_right_padding"
		        android:gravity="left|center_vertical"
		        android:text="@string/ebook_main_title" 
		        android:textSize="@dimen/file_text_size"
		        android:background="@color/transparent"
		        android:includeFontPadding="false"
		        android:maxLength="8"
		        />      
        </RelativeLayout>
        <View
            android:id="@+id/ebook_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_gravity="bottom"
            android:background="@android:color/black" />
    </FrameLayout> 
	<com.sunteam.ebook.view.TextReaderView
        android:id="@+id/ebook_read_txt_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        />
</LinearLayout>
